{
  "root": true,
  "extends": "standard",
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": [
    "html"
  ],
  "ecmaFeatures": {
    "modules": true,
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "rules": {
    "arrow-parens": [2, "always"],
    "no-var": [2],
    "object-shorthand": [2, "always"],
    "prefer-const": [1],
    "prefer-template": [2],
    "no-console": [1]
  }
}
